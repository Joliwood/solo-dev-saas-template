{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "noEmit": true,
    "incremental": true,
    "composite": true,
    "outDir": "./dist",
    "target": "es2016",
    "baseUrl": ".",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowImportingTsExtensions": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "#datamappers-server": ["./src/datamappers"],
      "#enums": ["./types/enums.ts"],
      "#resolvers-server": ["./src/resolvers"],
      "#types-server": ["./types/index.ts"],
      "#utils-server": ["./src/utils"],
    }
  },
  "include": [
    "./*",
    "./**/*",
    "./**/*.ts",
  ],
  "exclude": [
    "./dist/**/*",
    "node_modules"
  ]
}

