{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "server",
  "version": "1.1.0",
  "scripts": {
    "build": "tsc",
    "check": "pnpm typescript && pnpm eslint",
    "compile:server": "graphql-codegen --config codegen.ts",
    "dev": "cross-env NODE_ENV=development tsx watch app/index.ts",
    "generate:schema": "ts-node ./app/utils/schemaMerger.ts && copyfiles ./app/schemas/*.gql schemas/*.gql dist/",
    "knex:migration": "knex migrate:make update_the_name",
    "knex:seed:dev": "knex seed:run --env development",
    "knex:seed:local": "knex seed:run --env local",
    "knex:update:dev": "knex migrate:latest --env development",
    "knex:update:local": "knex migrate:latest --env local",
    "typescript": "pnpm tsc --noEmit"
  },
  "engine": {
    "node": ">=22.14.0"
  },
  "dependencies": {
    "@envelop/graphql-jit": "^9.1.3",
    "@faker-js/faker": "^9.6.0",
    "@graphql-codegen/cli": "^5.0.5",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-resolvers": "^4.5.0",
    "@graphql-tools/load-files": "^7.0.1",
    "@graphql-tools/merge": "^9.0.24",
    "@graphql-yoga/node": "^3.9.1",
    "@nic-jennings/sql-datasource": "^0.0.7",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "bcryptjs": "3.0.2",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "eslint-import-resolver-typescript": "^4.3.1",
    "fs": "0.0.1-security",
    "graphql": "^16.10.0",
    "graphql-yoga": "^5.13.2",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "knex": "^3.1.0",
    "nodemon": "^3.1.9",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "pg": "^8.14.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "cross-env": "7.0.3",
    "eslint": "9.23.0",
    "eslint-plugin-react": "^7.37.4",
    "globals": "16.0.0",
    "ts-node": "^10.9.2",
    "tsx": "4.19.2",
    "knex": "^2.0.0",
    "pg": "^8.7.0"
  }
}
