{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./.next/",
    "plugins": [{"name": "next"}],
    "paths": {
      "@/*": ["./src/*"],
      "#components": ["./components"],
      "#store": ["./store"],
      "#types": ["./types/"],
      "#utils": ["./utils"],
    }
  },
  "include": [
    "./next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "next",
    "node_modules"
  ]
}
