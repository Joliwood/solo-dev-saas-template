{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./.next/",
    "plugins": [
      { 
        "name": "next"
      }
    ],
    "paths": {
      "#components": ["./components"],
      "#store": ["./store"],
      "#types": ["./types/"],
      "#ui": ["./components/ui"],
      "#utils": ["./utils"],
    }
  },
  "include": [
    "next.config.js",
    "./postcss.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
  ],
  "exclude": [
    "next",
    "node_modules"
  ]
}
