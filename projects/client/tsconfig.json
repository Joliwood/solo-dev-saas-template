{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./.next/",
    // WIP - Nouvelle config monorepo
    "composite": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "#components-client": [
        "src/components"
      ],
      "#store-client": [
        "src/store"
      ],
      "#types-client": [
        "./types/"
      ],
      "#ui-client": [
        "src/components/ui"
      ],
      "#utils-client": [
        "src/utils"
      ]
    }
  },
  "include": [
    "next.config.js",
    "postcss.config.ts",
    "**/*.ts",
    "**/*.tsx",
    "./next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "next",
    "node_modules"
  ]
}
