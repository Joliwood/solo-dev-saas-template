{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./.next/",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "module": "Node16",
    "noEmit": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "#components-client": ["src/components"],
      "#store-client": ["./src/store"],
      "#types-client": ["./types/"],
      "#ui-client": ["./src/components/ui"],
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next.config.ts",
    "postcss.config.mts",
    "tailwind.config.mts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "./.next",
    "node_modules"
  ]
}
