{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./.next/",
    // WIP - Nouvelle config monorepo
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "module": "Node16",
    "noEmit": true,
    "composite": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "paths": {
    "#components-client": [
      "components"
    ],
    "#store-client": [
      "./src/store"
    ],
    "#types-client": [
      "./types/"
    ],
    "#ui-client": [
      "components/ui"
    ],
    "#utils-client": [
      "./src/utils"
    ],
    "@/components/*": [
      "components/*"
    ],
    "@/styles/*": [
      "styles/*"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next.config.ts",
    "postcss.config.mts",
    "tailwind.config.mts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "./.next",
    "node_modules"
  ]
}
