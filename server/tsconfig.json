{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "noEmit": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "target": "ESNext",
    "paths": {
      "#datamappers": ["./app/datamappers"],
      "#resolvers": ["./app/resolvers"],
      "#types": ["./types/index.d.ts"],
      "#enums": ["./types/enums.ts"],
      "#utils": ["./app/utils"],
    }
  },
  "include": [
    "_.eslintrc._cjs",
    "./*",
    "./**/*",
    "./types/index.d.ts",
    "/**/*.ts",
  ],
  "exclude": [
    "./dist/**/*",
    "node_modules",
  ]
}

