{
  "name": "server",
  "version": "1.0.0",
  "main": "index.ts",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "check:full": "yarn typescript && yarn eslint",
    "generate:schema": "ts-node ./app/utils/schemaMerger.ts && copyfiles ./app/schemas/*.gql schemas/*.gql dist/",
    "dev:server": "nodemon --ext ts --exec ts-node ./app/index.ts",
    "eslint": "eslint .",
    "typescript": "yarn tsc --noEmit"
  },
  "engine": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/merge": "^9.0.3",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "bcrypt": "^5.1.1",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "fs": "^0.0.1-security",
    "graphql": "^16.8.1",
    "graphql-yoga": "^5.3.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "nodemon": "^3.1.0",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {}
}
