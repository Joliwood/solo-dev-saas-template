{
  "name": "server",
  "version": "1.0.0",
  "main": "index.ts",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "check": "pnpm typescript && pnpm eslint",
    "compile": "graphql-codegen --config codegen.ts",
    "dev:server": "nodemon --ext ts --exec ts-node -r tsconfig-paths/register ./app/index.ts",
    "eslint": "eslint .",
    "generate:schema": "ts-node ./app/utils/schemaMerger.ts && copyfiles ./app/schemas/*.gql schemas/*.gql dist/",
    "knex:migration": "knex migrate:make update_the_name",
    "knex:seed:dev": "knex seed:run --env development",
    "knex:seed:local": "knex seed:run --env local",
    "knex:update:dev": "knex migrate:latest --env development",
    "knex:update:local": "knex migrate:latest --env local",
    "typescript": "pnpm tsc --noEmit"
  },
  "engine": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@envelop/graphql-jit": "^8.0.2",
    "@faker-js/faker": "^9.0.2",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript-resolvers": "^4.2.1",
    "@graphql-codegen/typescript": "^4.0.9",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/merge": "^9.0.7",
    "@graphql-yoga/node": "^3.9.1",
    "@nic-jennings/sql-datasource": "^0.0.7",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.7.0",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.4.0",
    "bcrypt": "^5.1.1",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint": "8.57.0",
    "fs": "^0.0.1-security",
    "graphql-yoga": "^5.7.0",
    "graphql": "^16.9.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "knex": "^3.1.0",
    "nodemon": "^3.1.7",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "pg": "^8.13.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {},
  "optionalDependencies": {}
}
